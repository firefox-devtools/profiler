{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Target & Module System (Updated to 2025 standards)
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",

    // Import/Export Compatibility (Simplifies conversion)
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,

    // Type Checking (Gradual strictness)
    "strict": false, // Keep false during migration
    "noFallthroughCasesInSwitch": false, // Already checked by eslint, with opt-out
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    // Additional Helpful Options for Migration
    "noImplicitOverride": true, // Modern TypeScript feature
    "exactOptionalPropertyTypes": false, // Too strict for migration
    "noUncheckedIndexedAccess": false, // Too strict for migration

    // Build & Performance
    "skipLibCheck": true,
    "isolatedModules": true, // May want to change this once we start using const enum
    "listFiles": false,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // Module Resolution
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/types/@types"],
    "paths": {
      "firefox-profiler/*": ["./src/*"],
      "firefox-profiler-res/*": ["./res/*"]
    },

    // React & JSX
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "src/types/libdef"]
}
